<section>
	<div class="container">
		<div class="row">
			<% include ../flash/errors %>
			
			<% if(notes && notes.length > 0){ %>
				<% notes.forEach((note) =>{ %>
					<div class="col-md-4 well" style="margin-right: 15px;">
						<a href="#">
							<h3><%= note.title %></h3>
							<p><%= note.description %></p>
						</a>

						<a href="/notes/<%= note._id%>/edit" class="fa fa-pencil"></a>
						<form action="/notes/<%= note.id %>?_method=delete" method="post" accept-charset="utf-8" class="form-inline">
							<button type="submit" class="btn btn-danger">
								<i class="fa fa-trash"></i>
							</button>
						</form>
					</div>
				<% }) %>
			<%} else {%>
				<h1 class="text-center">You currently don't have any notes.</h1>
			<% } %>
		</div>
	</div>
</section>