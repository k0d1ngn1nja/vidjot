<section id="pwdforgotForm">
	<div class="container">
		<% include ../flash/errors %>
		<% include ../flash/info %>
		
		<div class="row">
			<div class="col-sm-12">
				<h2>Forgot your password?</h2>
				<hr width="30%" class="pull-left">
			</div>
		</div>
		<div class="row">
			<div class="col-sm-6 pwdforgotForm" style="padding-top: 25px;">
				<form action="/forgotpassword" method="post" accept-charset="utf-8" id="pwdforgotForm">
					<div class="form-group">
						<label>Enter your email below.</label>
						<input type="email" name="forgotPwdEmail" placeholder="Enter the email you registered with." class="form-control" autocomplete="on">
					</div>
					<button type="submit" class="btn btn-primary">Reset Password</button>
				</form> <br>
				<div>
          <h4>Already have an account? <a href="/login">Login</a></h4>
        </div>
			</div><!--/col-->

			<div class="col-sm-5">
				<div class="login_icon" style="padding-top: 5px;">
          <i class="fa fa-user-secret"></i>
        </div>
			</div>
		</div>
	</div>
</section>